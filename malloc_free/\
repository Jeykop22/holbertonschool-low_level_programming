#include "main.h"
#include <stdlib.h>

int **alloc_grid(int width, int height)
{
	int d, c;
	char **s;

	if (width <= 0 || height <= 0)
		return ('\0');
	s = malloc(sizeof(int *) * height);
	if (s == 0)
		return ('\0');
	for (c = 0; c < height; c++)
	{
		for (d = 0; d < width; d++)
		{
			s[c][d] = 0;
		}
	}
	return (s);
}
